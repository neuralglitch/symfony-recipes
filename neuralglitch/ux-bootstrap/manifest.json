{
    "bundles": {
        "NeuralGlitch\\UxBootstrap\\NeuralGlitchUxBootstrapBundle": ["all"]
    },
    "copy-from-recipe": {
        "config/": "%CONFIG_DIR%/",
        "assets/": "%SRC_DIR%/assets/",
        "importmap.php": "%SRC_DIR%/importmap-ux-bootstrap.php"
    },
    "add-lines": [
        {
            "file": "assets/bootstrap.js",
            "content": "\n// UX Bootstrap Controllers (auto-added by Flex recipe)\nimport { registerUxBootstrapControllers } from './controllers/ux_bootstrap_controllers.js';\nregisterUxBootstrapControllers(app);",
            "position": "after_target",
            "target": "const app = startStimulusApp();"
        },
        {
            "file": "importmap.php",
            "content": "\n    // Include UX Bootstrap controllers (auto-added by Flex recipe)\n    ...require __DIR__ . '/importmap-ux-bootstrap.php',",
            "position": "before_target",
            "target": "];"
        }
    ],
