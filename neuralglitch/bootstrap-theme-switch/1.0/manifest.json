{
    "bundles": {
        "NeuralGlitch\\BootstrapThemeSwitch\\BootstrapThemeSwitchBundle": [
            "all"
        ]
    },
    "copy-from-package": {
        "assets/": "assets/vendor/neuralglitch/bootstrap-theme-switch/",
        "config/routes.yaml": "config/routes/bootstrap_theme_switch.yaml"
    },
    "add-lines": [
        {
            "file": "assets/app.js",
            "content": "import './vendor/neuralglitch/bootstrap-theme-switch/dist/bootstrap-theme-switch.min.js';",
            "position": "bottom",
            "warn_if_missing": true
        }
    ]
}