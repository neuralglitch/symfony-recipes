{
    "bundles": {
        "NeuralGlitch\\TailwindBridge\\TailwindBridgeBundle": ["all"]
    },
    "copy-from-package": {
        "config/packages/asset_mapper.yaml": "%CONFIG_DIR%/packages/asset_mapper.yaml",
        "config/packages/symfonycasts_tailwind.yaml": "%CONFIG_DIR%/packages/symfonycasts_tailwind.yaml",
        "tailwind.config.js": "%ROOT_DIR%/tailwind.config.js"
    },
    "post-install-output": [
        "<bg=blue;fg=white> Tailwind Bridge installed! </>",
        "",
        "  * <fg=blue>Add stylesheet to your base template</>",
        "",
        "    <comment>{# templates/base.html.twig (in <head>) #}</comment>",
        "    <link rel=\"stylesheet\" href=\"{{ asset('input.built.css') }}\">",
        "",
        "  * <fg=blue>Start Tailwind in watch mode</>",
        "",
        "    $ php bin/console tailwind:build --watch",
        "",
        "  * <fg=blue>Read the documentation</>",
        "",
        "    https://github.com/neuralglitch/tailwind-bridge",
        ""
    ]
}

