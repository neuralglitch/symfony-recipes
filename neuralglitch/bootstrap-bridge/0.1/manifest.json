{
    "bundles": [
        {
            "name": "NeuralGlitch\\BootstrapBridge\\BootstrapBridgeBundle"
        }
    ],
    "copy-from-package": {
        "importmap-root.php": "importmap.php",
        "assets/styles/_bootstrap.scss": "assets/styles/_bootstrap.scss",
        "assets/styles/_variables.scss": "assets/styles/_variables.scss",
        "assets/styles/_custom.scss": "assets/styles/_custom.scss",
        "assets/styles/app.scss": "assets/styles/app.scss",
        "assets/app.js": "assets/app.js",
        "config/packages/asset_mapper.yaml": "config/packages/asset_mapper.yaml",
        "config/packages/symfonycasts_sass.yaml": "config/packages/symfonycasts_sass.yaml",
        "config/packages/twig.yaml": "config/packages/twig.yaml",
        "config/packages/monolog.yaml": "config/packages/monolog.yaml",
        "config/packages/debug.yaml": "config/packages/debug.yaml"
    },
    "post-install-output": [
        "Bootstrap Bridge has been successfully installed!",
        "",
        "Files created:",
        "- assets/styles/bootstrap.scss - Main Bootstrap SCSS file",
        "- assets/styles/_variables.scss - Bootstrap variables for customization",
        "- assets/styles/app.scss - Main SCSS entry point",
        "",
        "Configuration files:",
        "- config/packages/asset_mapper.yaml - Asset Mapper configuration",
        "- config/packages/symfonycasts_sass.yaml - Sass Bundle configuration",
        "- config/packages/twig.yaml - Twig Bootstrap form theme",
        "",
        "Next steps:",
        "1. Customize Bootstrap variables in assets/styles/_variables.scss",
        "2. Add your custom styles in assets/styles/app.scss",
        "3. Use {{ importmap('bootstrap-bridge') }} in your templates",
        "",
        "Documentation: https://github.com/neuralglitch/bootstrap-bridge"
    ],
    "env": [],
    "aliases": []
}
