{
    "bundles": {
        "Serotoninja\\BootstrapThemeSwitcher\\BootstrapThemeSwitcherBundle": [
            "all"
        ]
    },
    "copy-from-package": {
        "assets/": "assets/vendor/serotoninja/bootstrap-theme-switcher/",
        "config/routing.yaml": "config/routes/bootstrap_theme_switcher.yaml"
    },
    "add-lines": [
        {
            "file": "assets/app.js",
            "content": "import './vendor/serotoninja/bootstrap-theme-switcher/dist/theme-switch.min.js';",
            "position": "bottom",
            "warn_if_missing": true
        }
    ]
}