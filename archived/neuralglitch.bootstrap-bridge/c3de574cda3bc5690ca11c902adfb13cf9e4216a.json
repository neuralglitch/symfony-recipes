{
    "manifests": {
        "neuralglitch/bootstrap-bridge": {
            "manifest": {
                "bundles": {
                    "NeuralGlitch\\BootstrapBridge\\BootstrapBridgeBundle": [
                        "all"
                    ]
                },
                "copy-from-package": {
                    "assets/styles/_bootstrap.scss": "%APP_DIR%/assets/styles/_bootstrap.scss",
                    "assets/styles/_variables.scss": "%APP_DIR%/assets/styles/_variables.scss",
                    "assets/styles/_custom.scss": "%APP_DIR%/assets/styles/_custom.scss",
                    "assets/styles/app.scss": "%APP_DIR%/assets/styles/app.scss",
                    "config/packages/symfonycasts_sass.yaml": "%CONFIG_DIR%/packages/symfonycasts_sass.yaml"
                },
                "add-lines": [
                    {
                        "file": "config/packages/twig.yaml",
                        "content": "    form_themes:\n        - 'bootstrap_5_layout.html.twig'",
                        "position": "after_target",
                        "target": "twig:",
                        "warn_if_missing": false
                    },
                    {
                        "file": "assets/app.js",
                        "content": "// Import Bootstrap JS\nimport * as bootstrap from './vendor/bootstrap/bootstrap.index.js';\nwindow.bootstrap = bootstrap;\n\n// Import Bootstrap Bridge\nimport '../vendor/neuralglitch/bootstrap-bridge/assets/bootstrap-bridge.js';",
                        "position": "after_target",
                        "target": "import './bootstrap.js';",
                        "warn_if_missing": false
                    },
                    {
                        "file": "importmap.php",
                        "content": "    // Bootstrap Bridge importmap\n    ...require __DIR__ . '/vendor/neuralglitch/bootstrap-bridge/importmap.php',",
                        "position": "after_target",
                        "target": "    ],",
                        "warn_if_missing": false
                    },
                    {
                        "file": "config/packages/asset_mapper.yaml",
                        "content": "      - 'vendor/neuralglitch/bootstrap-bridge/assets/'",
                        "position": "after_target",
                        "target": "      - 'assets/'",
                        "warn_if_missing": false
                    }
                ],
                "post-install-output": [
                    "<bg=blue;fg=white> Bootstrap Bridge installed! </>",
                    "",
                    "  * <fg=blue>Add importmap to your templates</>",
                    "",
                    "    <comment>// templates/base.html.twig (inside <head>)</comment>",
                    "    {{ importmap('app') }}",
                    "",
                    "  * <fg=blue>Optimize bundle size</>",
                    "",
                    "    Edit: <comment>assets/styles/_bootstrap.scss</comment>",
                    "    Comment out unused components to reduce CSS from 200KB to 50KB!",
                    "",
                    "  * <fg=blue>Compile SCSS</>",
                    "    $ php bin/console sass:build",
                    "",
                    "  * <fg=blue>Read the documentation</>",
                    "    https://github.com/neuralglitch/bootstrap-bridge",
                    ""
                ]
            },
            "files": [],
            "ref": "c3de574cda3bc5690ca11c902adfb13cf9e4216a"
        }
    }
}
