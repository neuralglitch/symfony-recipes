{
    "manifests": {
        "neuralglitch/bootstrap-theme-switch": {
            "manifest": {
                "bundles": {
                    "NeuralGlitch\\BootstrapThemeSwitch\\BootstrapThemeSwitchBundle": [
                        "all"
                    ]
                },
                "copy-from-package": {
                    "assets/": "assets/vendor/neuralglitch/bootstrap-theme-switch/",
                    "config/routes.yaml": "config/routes/bootstrap_theme_switch.yaml"
                },
                "add-lines": [
                    {
                        "file": "assets/app.js",
                        "content": "import './vendor/neuralglitch/bootstrap-theme-switch/dist/bootstrap-theme-switch.min.js';",
                        "position": "bottom",
                        "warn_if_missing": true
                    }
                ],
                "post-install-output": [
                    "  * <fg=blue>Follow these steps</> to use the <fg=green>Bootstrap Theme Switch:</>",
                    "    1. Prepare the base template <comment>templates/base.html.twig</>.",
                    "    2. Include one of the partial templates <comment>anywhere</>.",
                    "    3. Build or serve the <comment>assets</>.",
                    "",
                    "  * <fg=blue>Read</> the documentation at <comment>https://github.com/neuralglitch/bootstrap-theme-switch/blob/master/README.md</>"
                ]
            },
            "files": [],
            "ref": "f3db9426746a6fb12dbbcd48951224b7c3c581ef"
        }
    }
}
